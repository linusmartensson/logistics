<div class="hero-unit">
  <h2 class="id"><%= order.id %></h2>
  <%- linkTo('Edit this order', editOrderPath(params.id), {class: 'btn pull-right'}); %>
  <%- linkTo('Back to list', orderPath(''), {class: 'btn pull-right'}); %>
</div>

<h2>Order Properties</h2>
<% for(var i in order) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= order[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>