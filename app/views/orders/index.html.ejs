<div class="hero-unit">
  <h2>All Orders</h2>
  <%- linkTo('Create a new Order', addOrderPath, {class: 'btn pull-right'}); %>
</div>

<div id="orders-list">
<%- JSON.stringify(orders) %>
<% if (orders) { %>
<%- buildTable([{text:"Vara", field:"ware.name"},
                {text:"Beställningstid", field:"createdAt"},
		{text:"Antal", field:"count"},
                {text:"Status", field:"status"},
                {text:"Beställning till", field:"place.name"}], orders, orderPath, "id", [{path: function(a){return "/orders/complete/"+a;}, text: "Markera som hanterad"}]); %>
<% } %>
</div>
