<div class="hero-unit">
  <h2>All Places</h2>
  <%- linkTo('Create a new Place', addPlacePath, {class: 'btn pull-right'}); %>
</div>

<div id="places-list">
<% if (places) { %>
<% for (var i = 0, ii = places.length; i < ii; i++) { %>
  <div class="row list-item" id="place-<%= places[i].id; %>">
    <div class="span8">
      <h3><%- linkTo(places[i].name, placePath(places[i].id)); %></h3>
    </div>
    <div class="span4">
      <h3><i class="icon-list-alt"></i><%= places[i].id; %></h3>
    </div>
  </div>
<% } %>
<% } %>
</div>