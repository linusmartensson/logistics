<div class="hero-unit">
  <h2 class="id"><%= transaction.id %></h2>
  <%- linkTo('Edit this transaction', editTransactionPath(params.id), {class: 'btn pull-right'}); %>
  <%- linkTo('Back to list', transactionPath(''), {class: 'btn pull-right'}); %>
</div>

<h2>Transaction Properties</h2>
<% for(var i in transaction) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= transaction[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>